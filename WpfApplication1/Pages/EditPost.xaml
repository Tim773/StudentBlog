<Page x:Class="WpfApplication1.Pages.EditPost"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="504"
      Title="EditPost">

    <Grid>
        <Canvas>
            <TextBlock FontSize="30"
                       Canvas.Left="147">Создать запись</TextBlock>
            <RichTextBox x:Name="richtbPost"
                         Height="170"
                         Width="433"
                         Canvas.Top="45" Canvas.Left="35" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="savePost"
                    Content="Сохранить"
                    FontSize="27" 
                    Height="43"
                    Width="168" 
                    Canvas.Left="168" 
                    Canvas.Top="247" 
                    Click="savePost_Click"
                    />
        </Canvas>
    </Grid>
</Page>
